{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["esnext", "dom"],
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/node_modules", "**/node_modules/**", "dist", "build"],
  "include": ["src/**/*.ts"]
}
