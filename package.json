{
  "name": "script-template-ts",
  "version": "1.0.0",
  "description": "Bun Typescript template",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky install",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "start": "bun run src/index.ts",
    "start:dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start:prod": "NODE_ENV=production bun run dist/index.js",
    "format": "./node_modules/.bin/prettier --write '{**/*,*}.{js,ts,jsx,tsx}'",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix"
  },
  "keywords": [],
  "author": "Nhan Cao <me@nhancv.com> (https://nhancv.github.io)",
  "license": "MIT",
  "dependencies": {
    "bignumber.js": "^9.1.1",
    "moment": "^2.30.1",
    "pino": "^10.1.0",
    "pretty-num": "^0.5.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.0.0",
    "pretty-quick": "4.0.0",
    "typescript": "^5.7.3"
  }
}
